<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<navigation-rule>
		<from-view-id>/registrieren.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{benutzerController.registrieren}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/filmListe.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{filmController.selectFilm}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/filmformular.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<application>
		<locale-config>
			<default-locale>de</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>language</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>


</faces-config>
