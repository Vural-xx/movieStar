<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.Film" table="Filme">
   
      <id name="name" type="string" column="name">
         <generator class="assigned"/>
      </id>
      <property name="beschreibung" column="beschreibung" type="string"/>
      <property name="erscheinungsjahr" column="erscheinungsjahr" type="string"/>
      <property name="dauer" column="dauer" type="string"/>
   </class>
</hibernate-mapping>


